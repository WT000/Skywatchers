<%- include("common/header") %>

    <main>
        <% if (errors["username"] || errors["password"]) { %>
            <div class="alert alert-danger text-center fade show" role="alert">
                <% if (errors["username"]) { %>
                <%= errors["username"].message %>
                <% } %>
    
                <% if (errors["password"]) { %>
                <%= errors["password"].message %>
                <% } %>
                <script type="text/javascript">
                    setTimeout(e=> {$('.alert').alert('close');}, 4000);
                </script>
            </div>
        <% } %>
        <% if (message) { %>
            <div class="alert alert-success text-center fade show" role="alert">
                <%= message %>
                <script type="text/javascript">
                    setTimeout(e=> {$('.alert').alert('close');}, 4000);
                </script>
            </div>
        <% } %>
        
        <section id="main-header" class="py-5 text-center container bg-lightdark">
            <h1>Login</h1>
        </section>
        
        <div class="py-4 bg-dark">
            <h2 class="text-center">Ready to continue your adventure?</h2>
            <div class="container">
                <form action="/login" method="post">
                    <div class="row justify-content-center">
                        <div class="col-4 bg-lightdark">
                            <input class="mt-3 form-control" name="username" placeholder="Username" required>
                            <input type="password" class="mt-3 form-control" name="password" placeholder="Password" required>
                            <label><input type="checkbox" class="my-3" name="rememberMe" value="true">Remember me</label>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-4 bg-lightdark text-center">
                            <button class="w-100 mb-3 btn btn-lg btn-primary" type="submit">Sign in</button>
                            <p><a href="./register">Create an account</a></p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </main>

<%- include("common/footer") %>