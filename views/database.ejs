<%- include("common/header") %>

    <main>
        <section class="py-5 text-center container bg-lightdark">
            <h1>Database</h1>
        </section>
        
        <div class="container pt-3 px-4 bg-dark search-area">
            <h4 class="text-center">Object Filter</h4>
            <form>
                <div class="row">
                  <div class="col">
                    <label for="object-name">Object Name</label>
                    <input class="form-control" id="object-name" name="objectName">
                  </div>
                  <div class="col">
                    <label for="object-type">Object Type</label>
                    <select class="form-select" id="object-type" name="objectType">
                        <option>All</option>
                        <option>(type)</option>
                        <option>(type)</option>
                        <option>(type)</option>
                    </select>
                  </div>
                  <div class="col">
                    <label for="object-order">Object Order</label>
                    <select class="form-select" id="object-order" name="objectOrder">
                        <option>A-Z</option>
                        <option>Z-A</option>
                        <option>Date Added</option>
                    </select>
                  </div>
                </div>
            </form>
        </div>

        <div class="album py-4 bg-dark">
            <h2 class="text-center">Results (num)</h2>
            <div class="container">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-3">

                    <div class="col">
                        <a class="text-decoration-none" href="./viewObject">
                        <div class="card shadow-sm bg-lightdark">
                            <img src="images/defaultImage.png" class="img-fluid" alt="...">

                            <div class="card-body">
                                <p class="card-text text-center card-title">(name)</p>
                                <p class="mb-2 card-text text-center">(description)</p>
                                <small class="text-muted discoverer">Discovered by (user)</small>
                            </div>
                        </div>
                        </a>
                    </div>
                    
                </div>
            </div>
        </div>
    </main>

    <%- include("common/footer") %>