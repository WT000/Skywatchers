<%- include("common/header") %>

    <main>
        <% if (errors["username"] || errors["email"] || errors["password"]) { %>
            <div class="alert alert-danger text-center fade show" role="alert">
                <% if (errors["username"]) { %>
                <%= errors["username"].message %>
                <% } %>

                <% if (errors["email"]) { %>
                <%= errors["email"].message %>
                <% } %>

                <% if (errors["password"]) { %>
                <%= errors["password"].message %>
                <% } %>
                <script type="text/javascript">
                    setTimeout(e=> {$('.alert').alert('close');}, 4000);
                </script>
            </div>
        <% } %>
        
        <section id="main-header" class="py-5 text-center container bg-lightdark">
            <h1>Register</h1>
        </section>
        
        <div class="py-4 bg-dark">
            <h2 class="text-center">Ready to start your adventure?</h2>
            <div class="container">
                <form action="/register" method="post">
                    <div class="row justify-content-center">
                        <div class="col-md-4 bg-lightdark">
                            <div class="form-group mt-2">
                                <label for="username-input">Username</label>
                                <input id="username-input" class="form-control" name="username" required>
                            </div>
                            <div class="form-group mt-2">
                                <label for="email-input">Email</label>
                                <input type="email" id="email-input" class="form-control" name="email" required>
                            </div>
                            <div class="form-group mt-2 mb-3">
                                <label for="password-input">Password</label>
                                <input type="password" id="password-input"class="form-control" name="password" required>
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-md-4 bg-lightdark text-center">
                            <button class="w-100 mb-2 btn btn-lg btn-primary" type="submit">Sign up</button>
                            <p><a class="text-decoration-none" href="/login">Return to Login</a></p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </main>

<%- include("common/footer") %>