<%- include("common/header") %>

<main>
    <section id="main-header" class="py-5 text-center container bg-lightdark">
        <h1>Statistics</h1>
    </section>

    <div class="py-2 bg-dark">
        <h4 class="text-center">Below are the current statistics based on public objects, empty object categories are omitted.</h4>
    </div>

    <div class="py-4 bg-dark">
        <div class="container">
            <div class="row justify-content-center">
                <div class="table-responsive col-md-4">
                    <table class="table table-dark">
                        <h5 class="text-center">Objects by Category</h5>
                        <thead>
                            <tr>
                                <th class="align-middle">Type</th>
                                <th class="align-middle">No. Objects</th>
                            </tr>
                        </thead>
                        <tbody id="type-container">

                        </tbody>
                    </table>
                </div>
            </div>

            <h5 class="mt-3 text-center">Data Visualisation <button id="visual-change" class="mt-2 mb-2 btn btn-sm btn-primary">Change Mode</button></h5>
            <div class="container w-40">
                <canvas id="statChart"></canvas>
            </div>
        </div>
    </div>
</main>

<script src="/scripts/chart.min.js"></script>
<script src="/scripts/display-stats.js"></script>
<%- include("common/footer") %>