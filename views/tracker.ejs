<%- include("common/header") %>

    <main>
        <section class="py-5 text-center container bg-lightdark">
            <h1>Your Observations</h1>
        </section>
        
        <div class="container pt-3 px-4 bg-dark search-area">
            <p class="text-center">Object Filter</p>
            <form>
                <div class="row">
                  <div class="col">
                    <input class="form-control" placeholder="Object name" name="objectName">
                  </div>
                  <div class="col">
                    <select class="form-select" name="objectType">
                        <option>All</option>
                        <option>(type)</option>
                        <option>(type)</option>
                        <option>(type)</option>
                    </select>
                  </div>
                </div>
            </form>
        </div>

        <div class="album py-4 bg-dark">
            <h2 class="text-center">Results (num)</h2>
            <div class="container">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-3">

                    <div class="col">
                        <div class="card shadow-sm bg-lightdark">
                            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
                                <title>Placeholder</title>
                                <rect width="100%" height="100%" fill="#55595c" /><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text>
                            </svg>

                            <div class="card-body">
                                <p class="card-text text-center card-title">(name)</p>
                                <p class="card-text text-center">(description)</p>
                                <div class="mb-2 d-flex justify-content-center align-items-center">
                                    <button type="button" class="btn btn btn-outline-secondary">View</button>
                                </div>
                                <small class="text-muted discoverer">Discovered by (user)</small>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </main>

    <%- include("common/footer") %>