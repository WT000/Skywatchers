<%- include("common/header") %>

    <main>
        <section class="py-5 text-center container bg-lightdark">
            <h1>Profile Viewer</h1>
        </section>

        <div class="py-4 bg-dark">
            <h2 class="text-center" style="color:<%= foundUserrank.colour %>"><%= foundUser.username %></h2>
            
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-5">
                        <table class="table table-dark">
                            <thead>
                            </thead>
                            <tbody>
                              <tr>
                                <th>Bio</th>
                                <td><%= foundUser.bio %></td>
                              </tr>
        
                              <tr>
                                <th>Rank</th>
                                <td><%= foundUserrank.name %> (<%= foundUser.rankScore %>)</td>
                              </tr>
        
                              <tr>
                                <th>Last Active</th>
                                <td><%= foundUser.updatedAt %></td>
                              </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <h2 class="text-center"><%= foundUser.username %>'s statistics</h2>
        </div>
    </main>

    <%- include("common/footer") %>